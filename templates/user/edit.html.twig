{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modifier
		<strong>{{ user.username }}</strong>
	</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
		{{ form_widget(form) }}
		<div class="d-flex justify-content-end">
			<button type="submit" class="btn btn-success my-1">Modifier</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
